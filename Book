    <!-- Proposal Section -->
    <div id="proposal">
        <p>Will you be mine forever?</p>
        <button id="yes-button" class="btn">Yes</button>
        <button id="no-button" class="btn">No</button>
    </div>

    <!-- Heart Emoji -->
    <div id="heart" class="heart">❤️</div>

    <script>
        // Show Proposal after the book is finished
        function showProposal() {
            document.getElementById('proposal').style.display = 'block';
        }

        // Make "No" button float around
        function moveNoButton(event) {
            const noButton = event.target;
            const maxX = window.innerWidth - noButton.offsetWidth - 30; // Added margin
            const maxY = window.innerHeight - noButton.offsetHeight - 30; // Added margin

            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;

            noButton.style.left = randomX + 'px';
            noButton.style.top = randomY + 'px';
        }

        // Heart animation for Yes button
        function showHeart() {
            document.getElementById('heart').style.opacity = 1;
            document.getElementById('proposal').style.display = 'none';  // Hide proposal after Yes
        }

        // Adding event listeners to buttons
        document.getElementById('yes-button').addEventListener('click', showHeart);
        document.getElementById('no-button').addEventListener('click', moveNoButton);

        // Simulate the book reading flow (after final page is shown)
        setTimeout(showProposal, 5000); // Show proposal after 5 seconds (change as needed)
    </script>
</body>
