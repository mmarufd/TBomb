            <p>Thank you for being an amazing person. You deserve everything beautiful in this world!</p>
        </div>
        <div id="page-5" class="text-page">
            <p>And... will you be mine forever?</p>
        </div>
    </div>

    <!-- Song Message -->
    <div id="song-message" class="song-message">
        <p>Your song is now playing...</p>
    </div>

    <!-- Video for Birthday Song -->
    <video id="birthday-video" autoplay controls>
        <source src="Bol_do_na_zara.mp4" type="video/mp4">
        Your browser does not support the video element.
    </video>

    <!-- Proposal -->
    <div id="proposal" class="proposal">
        <p>Will you be mine forever?</p>
        <div class="proposal-buttons">
            <button id="yes-button" class="btn">Yes</button>
            <button id="no-button" class="btn floating" onclick="moveNoButton(event)">No</button>
        </div>
    </div>

    <!-- Heart -->
    <div id="heart" class="heart">❤️</div>

    <script>
        let currentPage = 0;
        const totalPages = 5;
        const pageContainer = document.getElementById('text-container');

        // Function to show the current page
        function showPage(pageIndex) {
            const pages = document.querySelectorAll('.text-page');
            if (pageIndex < totalPages) {
                pages[pageIndex].style.display = 'block';
                setTimeout(() => {
                    pages[pageIndex].style.opacity = 1;
                }, 100);
            }
        }

        // Next page handler
        function nextPage() {
            if (currentPage < totalPages) {
                currentPage++;
                showPage(currentPage);
            }
            // Play the video on the last page
            if (currentPage === totalPages) {
                document.getElementById('song-message').style.opacity = 1;
                document.getElementById('birthday-video').style.display = 'block';
                setTimeout(() => {
                    document.getElementById('proposal').style.display = 'block';
                    document.getElementById('proposal').style.opacity = 1;
                }, 2000);
            }
        }

        // Show the first page after 2 seconds
        setTimeout(() => {
            showPage(currentPage);
        }, 2000);

        // Event listener for page turning
        document.getElementById('text-container').addEventListener('click', nextPage);

        // Move the "No" button randomly when clicked
        function moveNoButton(event) {
            event.preventDefault();
            const noButton = event.target;
            moveButtonRandomly(noButton);
        }

        // Function to move the "No" button randomly
        function moveButtonRandomly(button) {
            const maxX = window.innerWidth - button.offsetWidth;
            const maxY = window.innerHeight - button.offsetHeight;
            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;
            button.style.position = 'absolute';
            button.style.left = randomX + 'px';
            button.style.top = randomY + 'px';
        }

        // When "Yes" is clicked, show the heart
        document.getElementById('yes-button').addEventListener('click', () => {
            document.getElementById('heart').style.opacity = 1;
            document.getElementById('proposal').style.opacity = 0;
        });
    </script>
</body>
